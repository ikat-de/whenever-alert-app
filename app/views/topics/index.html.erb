<h1>whenever-app</h1>
<p>現在時刻：<%= Time.current.strftime("%H時%M分") %></p>


<%= form_tag("/topics/create") do %>
  <input type="time" name="deadline" min="00:00" max="24:00" value="00:00:00">
  <textarea name="content"></textarea>
  <input type="submit" value="新規作成">
<% end %>


<% @topics.each do |topic| %>
  <p>====================================</p>
  <p>topic_id：<%= topic.id %></p>
  <p>コメント：<%= topic.content %></p>
  <p>締め切り時間：<%= topic.deadline.strftime("%H時%M分") %></p>
  <p>deadline_id：<%= topic.deadline_id %></p>
  <p>status：<%= topic.status %></p>
  <%= link_to 'コミット', topics_success_path(topic_id: topic.id), method: :post %>
  <p>====================================</p>
<% end %>

<h2>failure_topics</h2>
<% @failure_topics.each do |topic| %>
  <p>====================================</p>
  <p>topic_id：<%= topic.id %></p>
  <p>コメント：<%= topic.content %></p>
  <p>締め切り時間：<%= topic.deadline.strftime("%H時%M分") %></p>
  <p>deadline_id：<%= topic.deadline_id %></p>
  <p>status：<%= topic.status %></p>
  <%= link_to 'コミット', topics_success_path(topic_id: topic.id), method: :post %>
  <p>====================================</p>
<% end %>


